          "responses": {
            "200": {
              "description": "User updated successfully",
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        },
        "delete": {
          "summary": "Delete user by ID",
          "security": [{ "bearerAuth": [] }],
          "parameters": [
            {
              "name": "userID",
              "in": "path",
              "required": true,
